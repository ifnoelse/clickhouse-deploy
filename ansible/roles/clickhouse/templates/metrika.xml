<yandex>
    <clickhouse_remote_servers>
        <log>
{%for node_name in groups['clickhouse']|sort %}
            <shard>
                <weight>{{loop.index}}</weight>
                <internal_replication>false</internal_replication>
                <replica>
                    <host>{{node_name}}</host>
                    <port>9000</port>
                </replica>
            </shard>
{% endfor %}
        </log>
    </clickhouse_remote_servers>
</yandex>